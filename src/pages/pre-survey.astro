---
import BaseLayout from '../layouts/BaseLayout.astro';
import TypeformEmbed from '../components/TypeformEmbed.astro';
import '../styles/typeform.css';
const title = 'Pre-Survey';
const typeformId = import.meta.env.PUBLIC_TYPEFORM_ID || "OgxKHILD";
const isSandbox = import.meta.env.PUBLIC_TYPEFORM_ENABLE_SANDBOX === 'true';
---
<BaseLayout title={ title }>
    <script>
        const isDoneSurvey = localStorage.getItem('isDoneSurvey');
        if (isDoneSurvey) {
            window.location.replace("/participate")
        }
    </script>
    <TypeformEmbed formId={typeformId} enableSandbox={isSandbox} />
</BaseLayout>
