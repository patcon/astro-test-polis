---
import NavBar from '../components/NavBar.astro';
const { pageTitle } = Astro.props;

// Render environment banners when needed.
let envName = '';
if (import.meta.env.DEV) {
	envName = "Local Development";
} else if (import.meta.env.IS_TESTING) {
	envName = "Testing";
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.3/gh-fork-ribbon.min.css" />
		<title>{ pageTitle }</title>
	</head>
	<body>
		{ envName && <div class="github-fork-ribbon left-top" data-ribbon={envName} title={envName}>{envName}</div> }
		<NavBar />
		<main>
			<div class="max-w-screen-xl mx-auto p-4">
			<h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">{ pageTitle }</h1>
			<slot />
			</div>
		</main>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>
